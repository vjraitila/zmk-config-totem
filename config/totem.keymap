        num_layer {
            bindings = <
       &kp KP_DIVIDE    &kp N7  &kp N8  &kp N9  &kp KP_MINUS    &none      &none      &none      &none     &none
       &kp KP_MULTIPLY  &kp N4  &kp N5  &kp N6  &kp KP_PLUS     &none      &kp LSHFT  &kp LCTRL  &kp LALT  &kp LGUI
&none  &kp N0           &kp N1  &kp N2  &kp N3  &kp KP_COMMA    &none      &none      &none      &none     &none     &none
                                &none   &none   &mo 3           &kp ENTER  &kp BSPC   &kp RALT
            >;

            label = "NUM";
        };

        fun_layer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

            label = "FUN";

            // ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
            //             ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓   ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓
            //             ┃   RESET   ┃ BT CLEAR  ┃  OUT TOG  ┃           ┃           ┃   ┃           ┃    F7     ┃    F8     ┃    F9     ┃    F12    ┃
